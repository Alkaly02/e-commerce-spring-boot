<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
>
    <changeSet id="create_privileges_table" author="Moussa Alkaly BADJI">
        <createTable tableName="privileges">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true" primaryKeyName="pk_privileges_id" />
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false "/>
            </column>
        </createTable>

        <sql>
            INSERT INTO privileges (id, name)
            VALUES
            (1, 'CREATE_USERS'),
            (2, 'EDIT_USERS'),
            (3, 'DELETE_USERS'),
            (4, 'CREATE_CATEGORIES'),
            (5, 'EDIT_CATEGORIES'),
            (6, 'DELETE_CATEGORIES'),
            (7, 'CREATE_PRODUCTS'),
            (8, 'EDIT_PRODUCTS'),
            (9, 'DELETE_PRODUCTS'),
            (10, 'ASSIGN_DELIVERY');
        </sql>
        <rollback>
            <sql>DELETE FROM application_privileges WHERE id IN (1, 2);</sql>
        </rollback>
    </changeSet>
</databaseChangeLog>