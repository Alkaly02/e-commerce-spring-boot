<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
>
    <changeSet id="create_roles_privileges_table" author="Moussa Alkaly BADJI">
        <createTable tableName="roles_privileges">
            <column name="role_id" type="BIGINT">
                <constraints nullable="false "/>
            </column>
            <column name="privilege_id" type="BIGINT">
                <constraints nullable="false" />
            </column>
        </createTable>
        
        <addPrimaryKey tableName="roles_privileges" columnNames="role_id, privilege_id"
                       constraintName="pk_roles_privileges" />
    </changeSet>
</databaseChangeLog>